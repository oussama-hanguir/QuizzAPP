        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="249dp">

            <RadioButton
                android:id="@+id/oui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oui" />

            <RadioButton
                android:id="@+id/non"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
